{% extends 'base.html.twig' %}

{% block title %}Hello CommentaireController!
{% endblock %}


{% block body %}

	<table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Email</th>
				<th>Commentaire</th>
				<th>Texte Format</th>
			</tr>
		</thead>

		<tbody>

			{% for comm in comms %}

				<tr>
					<td>{{comm.nom}}
					</td>
					<td>
						{{comm.email}}</td>
					<td>
						{{comm.commentaire}}</td>
					<td>
						{{comm.getTextFormat()}}</td>


				</tr>


			{% endfor %}


		</tbody>
	</table>


{% endblock %}
